#!/bin/bash

OUTPUT_DIR=$HOME/Pictures/screenshots
mkdir -p "$OUTPUT_DIR"

NAME=$(date +%Y-%m-%d_%H:%M:%S_screenshot)
FMT=png

case $1 in
    --select-area)
        maim -s --format=$FMT $OUTPUT_DIR/$NAME.$FMT
        ;;
    --select-window)
        maim -st 9999999 --format=$FMT $OUTPUT_DIR/$NAME.$FMT
        ;;
    --entire-screen)
        maim --format=$FMT $OUTPUT_DIR/$NAME.$FMT
        ;;
esac


