#! /bin/bash

dots=(
    .config
    .screenlayout
    .scripts
    .bash_profile
    .bashrc
    .gitconfig
    .profile
    .tmux.conf
    .xinitrc
    .Xresources
    .zshrc
)

GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo "[START] dots symlinks"
for d in ${dots[*]}; do
    target=$HOME/$d

    if [ ! -L "$target" ]; then
        ln -s $PWD/$d $target
        echo -e "${GREEN}symlink for $target created${NC}"
    else
        echo -e "${RED}symlink for $target already exists${NC}"
    fi
done
echo "[DONE] dots symlinks"

echo "[START] xorg.conf.d symlinks, will require password"
sudo ln -s $PWD/X11-config/30-touchpad.conf /etc/X11/xorg.conf.d/30-touchpad.conf
echo "[DONE] xorg.conf.d symlinks"
